import javax.swing.JOptionPane;

public class StatusAluno extends JOptionPane {

	public static void main(String[] args) {

		String aluno;
		float notaFinal;
		
		
		JOptionPane.showInputDialog("Digite o nome do aluno");
		notaFinal = Float.parseFloat(JOptionPane.showInputDialog("Digite a nota final"));
		
		JOptionPane.showInternalMessageDialog(null, "O aluno ?? esta ?? com a nota ??");
		
		
	  // condições
	  // nota maior ou igual 7 'Aprovado'
	  // nota entre 4 e 7 'Recuperação'
	  // nota menor que 4 'Reprovado'
	}

}
